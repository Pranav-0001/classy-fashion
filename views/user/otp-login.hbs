                            <input type="submit" class="submit" value="Sent OTP">
                        </div>
                            {{/if}}
                        </div>
                        </form>
                        <p class="text-danger text-center">{{err}}</p>
                        {{#if otp}}
                        <form action="/otp-login" method="post">
                        <div class="input-field">
                            <input type="number" class="input" name="otp" id="email" required autocomplete="off">
                            <label for="email">One Time Password</label>
                        </div>
                        <div class="input-field">
                            <input type="submit" class="submit" value="Sign in">
                        </div>
                        </form>
                        {{/if}}
                     
                        
                        <div class="signin">
                           
                            
                            <span>Don't have an account? <a href="/signup">Sign up here</a></span><br>
                            <a href="/" class="text-center">Home</a>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

