<link rel="stylesheet" href="/stylesheets/login.css">
<div>
    <div class="wrapper">
        <div class="container main">
            <div class="row">
                <div class="col-md-6 side-image">


                    <div class="text">
                        <p class="d-none d-md-block">"Style is a way to say who you are without having to speak." <i> â€” Rachel Zoe</i></p>
                    </div>
                </div>
                <div class="col-md-6 right">
                    <div class="input-box">
                        <header>Login</header>
                       
                        <form action="/sent-otp" method="post">
                        <div class="input-field">
                            <input type="text" class="input" name="email" id="email" required autocomplete="off" value="{{data.email}}">
                            <label for="email">Email</label>
                            {{#if otp}}{{else}}
