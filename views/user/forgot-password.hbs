<link rel="stylesheet" href="/stylesheets/login.css">
<div>
    <div class="wrapper">
        <div class="container main">
            <div class="row">
                <div class="col-md-6 side-image">


                    <div class="text">
                        <p class="d-none d-md-block">"Style is a way to say who you are without having to speak." <i> â€” Rachel Zoe</i></p>
                    </div>
                </div>
                <div class="col-md-6 right">
                    <div class="input-box">
                        <header>Forgot Password</header>
                        {{#if success}}
                        <form action="/reset-password" method="post" class="p-3">
                        <div class="input-field">
                            <input type="password" class="input" name="password" id="email" required autocomplete="off">
                            <label for="email">Password</label>
                        </div>
                        <div class="input-field">
                            <p class="text-center text-danger">{{resetErr}}</p>
                            <input type="submit" class="submit" value="Reset password ">

                        </div>
                        </form>
                        {{else}}
                        {{#if OTP}}{{else}}
                        <form action="/forgot-verify" method="post" class="p-3">{{/if}}
                        <div class="input-field">
                            <input type="email" class="input" value="{{email}}" name="email" id="email" required autocomplete="off">
                            <label for="email">Email</label>
                        </div>
                        
                        {{#if OTP}}
                        <form action="/verifyForgotOTP" method="post">
                            <div class="input-field">
                            <input type="text" class="input" name="otp" id="email" required autocomplete="off">
                            <label for="email">One Time Password</label>
                        </div>
                        <div class="input-field">
                            <input type="submit" class="submit" value="Verify ">

                        </div>
                        </form>
                        {{else}}
                        <div class="input-field">
                            <input type="submit" class="submit" value="Send OTP ">

                        </div>
                        {{/if}}

                        </form>
                        <p class="text-danger text-center">{{err}}</p>
                        
                        <div class="signin">
                            <a href="/login" class="mb-2 text-center pe-3">login with password</a> <br>
                            <span>Don't have an account? <a href="/signup">Sign up here</a></span><br>
                            <a href="/" class="mb-2 text-center">Home</a>

                        </div>
                        {{/if}}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>