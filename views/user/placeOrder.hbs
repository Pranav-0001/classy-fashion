            }
        }
        var rzp1 = new Razorpay(options);
        rzp1.open();
    }


    function verifyPayment(payment, order) {
        $.ajax({
            url: '/verify-payment',
            method:'post',
            data: {
                payment,
                order
            },
            success:(response)=>{
                console.log(response)
                location.href='/place-order-success-page'
            }
             
        })
    }

</script>