<br>
<div class="head-img d-flex align-items-center justify-content-center ">
    <h1 class=" text-white " style="text-shadow: 2px 1px 2px rgb(0, 0, 0);">Orders</h1>
</div>
<section>
    <div class="container mt-3 ">
        <div class="row pt-4 pb-4">
            <div class="col-md-12">
                {{#each orderData}}
                <div class="card border mb-3 ">
                    <div class="row">
                        <h6 class="ms-2 pt-2 text-success">Arriving Today</h6>
                        <div class="col-md-4">
                            {{#each products}}
                            <div class="ps-2 pb-2">
                                <img class="pb-1 pt-1 pe-2" src="/product-images/{{product.Images.[0]}}.jpg" alt="" width="70px">{{product.product}} ({{quantity}})
                            </div>
                            {{/each}}
                        </div>
                        <div class="col-md-2 d-flex align-items-center justify-content-center">
                            Amount : â‚¹{{discTotal}}
                        </div>
                        <div class="col-md-4 d-flex align-items-center justify-content-center">
                            Date : {{Address.date}}
                        </div>
                        <div class="col-md-2 pb-3 pb-md-0 d-flex align-items-center justify-content-center">
                            <a href="/order/{{_id}}" class="btn btn-primary text-white">View Details</a>
                        </div>

                    </div>
                    
                </div>{{/each}}
            </div>
        </div>
</section>